{"ast":null,"code":"import { ref } from 'vue';\nexport default {\n  setup(props, context) {\n    const todo = ref('');\n    const hasError = ref(false);\n\n    const onSubmit = () => {\n      if (todo.value === '') {\n        hasError.value = true;\n      } else {\n        context.emit('add-todo', {\n          id: Date.now(),\n          subject: todo.value,\n          completed: false\n        });\n        hasError.value = false;\n        todo.value = '';\n      }\n    };\n\n    return {\n      todo,\n      hasError,\n      onSubmit\n    };\n  }\n\n};","map":{"version":3,"mappings":"AA2BI,SAASA,GAAT,QAAoB,KAApB;AAEA,eAAe;AACXC,OAAK,CAACC,KAAD,EAAQC,OAAR,EAAiB;AAClB,UAAMC,IAAG,GAAIJ,GAAG,CAAC,EAAD,CAAhB;AACA,UAAMK,QAAO,GAAIL,GAAG,CAAC,KAAD,CAApB;;AACA,UAAMM,QAAO,GAAI,MAAM;AACnB,UAAIF,IAAI,CAACG,KAAL,KAAe,EAAnB,EAAuB;AACnBF,gBAAQ,CAACE,KAAT,GAAiB,IAAjB;AACJ,OAFA,MAEO;AACHJ,eAAO,CAACK,IAAR,CAAa,UAAb,EAAyB;AACrBC,YAAE,EAAEC,IAAI,CAACC,GAAL,EADiB;AAErBC,iBAAO,EAAER,IAAI,CAACG,KAFO;AAGrBM,mBAAS,EAAE;AAHU,SAAzB;AAKAR,gBAAQ,CAACE,KAAT,GAAiB,KAAjB;AACAH,YAAI,CAACG,KAAL,GAAa,EAAb;AACJ;AACH,KAZD;;AAcA,WAAO;AACHH,UADG;AAEHC,cAFG;AAGHC;AAHG,KAAP;AAKJ;;AAvBW,CAAf","names":["ref","setup","props","context","todo","hasError","onSubmit","value","emit","id","Date","now","subject","completed"],"sourceRoot":"","sources":["/Applications/kdh3543/vue_practice1/src/components/SimpleForm.vue"],"sourcesContent":["<template>\n    <form @submit.prevent=\"onSubmit\">\n        <div class=\"d-flex\">\n            <div class=\"flex-grow-1 mr-2\">\n                <input\n                    class=\"form-control\"\n                    type=\"text\" \n                    v-model=\"todo\"\n                    placeholder=\"Type new to-do\"\n                >\n            </div>\n            <div>\n                <button \n                    class=\"btn btn-primary\"\n                    type=\"submit\"\n                >\n                    Add\n                </button>\n            </div>\n        </div>\n        <div v-show=\"hasError\" style=\"color: red\">\n            This field cannot be empty\n        </div>\n    </form>\n</template>\n\n<script>\n    import { ref } from 'vue';\n\n    export default {\n        setup(props, context) {\n            const todo = ref('');\n            const hasError = ref(false);\n            const onSubmit = () => {\n                if (todo.value === '') {\n                    hasError.value = true;\n                } else {\n                    context.emit('add-todo', {\n                        id: Date.now(),\n                        subject: todo.value,\n                        completed: false,\n                    });\n                    hasError.value = false;\n                    todo.value = '';\n                }\n            };\n\n            return {\n                todo,\n                hasError,\n                onSubmit,\n            };\n        }\n    }\n</script>\n\n<style></style>"]},"metadata":{},"sourceType":"module"}